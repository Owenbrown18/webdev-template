---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactHeroSection from '../components/contact/hero/ContactHeroSection.astro';
import InfoFormSection from '../components/contact/info-form/InfoFormSection.astro';
import ContactFormSection from '../components/contact/form/ContactFormSection.astro';
import { site, getContactHeroVariant } from '../config/content';

const contactHeroVariant = getContactHeroVariant();
const contactHeroIsFullscreen = contactHeroVariant === 'fullscreen';
---
<BaseLayout
  title="Contact"
  description={`Plan your next project with ${site.name}`}
  showTagline={false}
  heroIsFullscreen={contactHeroIsFullscreen}
>
  <div class="space-y-16 sm:space-y-20">
    <ContactHeroSection />
    <InfoFormSection id="contact-details" tabindex="-1" />
    <ContactFormSection />
  </div>
</BaseLayout>
