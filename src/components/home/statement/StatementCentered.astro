---
type Props = {
  eyebrow?: string;
  title?: string;
  intro?: string;
  sectionNumber?: string;
  animationEnabled?: boolean;
  backgroundClass?: string;
  backgroundTone?: string;
  backgroundStyle?: string;
  image?: { src?: string | null; alt?: string | null };
};

const {
  eyebrow,
  title,
  intro,
  image: _image,
  animationEnabled = true,
  sectionNumber,
  backgroundClass,
  backgroundTone,
  backgroundStyle,
  ...restProps
} = Astro.props as Props & Record<string, any>;
void _image;

const hasIntro = typeof intro === 'string' && intro.trim().length > 0;
const introParagraphs = hasIntro
  ? intro
      .split(/\n\s*\n/)
      .map((paragraph) => paragraph.trim())
      .filter(Boolean)
  : [];
const hasContent = Boolean(eyebrow || title || hasIntro);
const extraClass = typeof restProps.class === 'string' ? restProps.class : undefined;
if (extraClass) {
  delete restProps.class;
}

const inlineStyle = (() => {
  const userStyle = typeof restProps.style === 'string' ? restProps.style : undefined;
  if (userStyle) {
    delete restProps.style;
  }
  if (backgroundStyle && userStyle) {
    return `${backgroundStyle}; ${userStyle}`;
  }
  return backgroundStyle ?? userStyle ?? undefined;
})();

const sectionClasses = ['section-shell', backgroundClass, extraClass].filter(Boolean).join(' ');
const shouldAnimate = animationEnabled !== false;
const contentClasses = [
  'section-container',
  shouldAnimate
    ? 'motion-safe:translate-y-6 motion-safe:opacity-0 motion-safe:transition-all motion-safe:duration-[900ms] motion-safe:ease-out data-[visible=true]:motion-safe:translate-y-0 data-[visible=true]:motion-safe:opacity-100'
    : '',
].filter(Boolean);
const combinedContentClasses = contentClasses.join(' ');
const eyebrowStackClasses = 'eyebrow-stack w-full text-left';
const eyebrowWrapperClasses = 'eyebrow-banner-wrapper text-left';
const sanitizedSectionNumber =
  typeof sectionNumber === 'string' && sectionNumber.trim().length > 0
    ? sectionNumber.trim()
    : undefined;
const eyebrowClasses = 'eyebrow-banner';
const titleClasses = undefined;
const introClasses = 'rich-intro text-left';
---
{hasContent ? (
  <section
    class={sectionClasses}
    data-background-tone={backgroundTone ?? undefined}
    style={inlineStyle}
    data-statement-root={shouldAnimate ? 'true' : undefined}
    {...restProps}
  >
    <div class={combinedContentClasses} data-statement-content>
      {(eyebrow || hasIntro) ? (
        <div class={eyebrowStackClasses} data-align="left">
          {eyebrow ? (
            <div class={eyebrowWrapperClasses}>
              <p
                class={eyebrowClasses}
                data-align="left"
                data-has-number={sanitizedSectionNumber ? 'true' : undefined}
              >
                <span class="eyebrow-banner__label text-left">{eyebrow}</span>
                {sanitizedSectionNumber ? (
                  <span class="section-number-label" aria-label={`Section ${sanitizedSectionNumber}`}>
                    {sanitizedSectionNumber}
                  </span>
                ) : null}
              </p>
            </div>
          ) : null}
          {hasIntro &&
            introParagraphs.map((paragraph) => (
              <p class={`${introClasses} w-full`}>{paragraph}</p>
            ))}
        </div>
      ) : null}
    </div>
    {shouldAnimate ? (
      <script>
        const roots = Array.from(document.querySelectorAll('[data-statement-root="true"]'));
        const supportMatchMedia = typeof window !== 'undefined' && typeof window.matchMedia === 'function';
        const prefersReducedMotion = supportMatchMedia
          ? window.matchMedia('(prefers-reduced-motion: reduce)').matches
          : false;

        const reveal = (el: Element) => {
          if (el instanceof HTMLElement) {
            el.dataset.visible = 'true';
          }
        };

        roots.forEach((root) => {
          if (!(root instanceof HTMLElement)) {
            return;
          }

          if (root.dataset.statementAnimated === 'true') {
            return;
          }

          const content = root.querySelector('[data-statement-content]');
          if (!(content instanceof HTMLElement)) {
            return;
          }

          root.dataset.statementAnimated = 'true';

          if (prefersReducedMotion || !('IntersectionObserver' in window)) {
            reveal(content);
            return;
          }

          const observer = new IntersectionObserver(
            (entries, obs) => {
              entries.forEach((entry) => {
                if (entry.isIntersecting) {
                  reveal(entry.target);
                  obs.unobserve(entry.target);
                }
              });
            },
            {
              rootMargin: '0px 0px -10% 0px',
              threshold: 0.2,
            },
          );

          observer.observe(content);
        });
      </script>
    ) : null}
  </section>
) : null}
