---
import type { SiteContent, TestimonialsContent } from '../../../types/content';

interface Props {
  quotes: TestimonialsContent['items'];
  site: SiteContent;
  title?: string;
  intro?: string;
}

const {
  quotes = [],
  site,
  title = `Why people choose ${site.name}`,
  intro = 'Stories from neighbors',
}: Props = Astro.props as Props;
---
<section class="py-16 sm:py-20">
  <div class="mx-auto flex max-w-5xl flex-col gap-12 px-6">
    <div class="text-center">
      <p class="text-sm font-semibold uppercase tracking-[0.28em] text-[color:var(--color-primary)]/90">
        {intro}
      </p>
      <h2 class="mt-2 text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">
        {title}
      </h2>
    </div>
    <div class="space-y-6">
      {quotes?.map(({ quote, author }, index) => (
        <figure class={`rounded-3xl border border-slate-200 bg-white/95 p-6 shadow-sm sm:p-8 ${index % 2 === 0 ? 'sm:translate-x-0' : 'sm:translate-x-8'}`}>
          <blockquote class="text-base font-medium leading-relaxed text-slate-700">
            “{quote}”
          </blockquote>
          <figcaption class="mt-4 text-sm font-semibold text-slate-900">{author}</figcaption>
        </figure>
      ))}
    </div>
  </div>
</section>
