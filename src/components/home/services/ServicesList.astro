---
import type { ServicesContent } from '../../../types/content';

interface Props {
  services: ServicesContent;
  title?: string;
  intro?: string;
}

const {
  services,
  title = 'Our Services',
  intro = 'Support tailored to your needs.',
}: Props = Astro.props as Props;

const items = Array.isArray(services.items) ? services.items : [];
---
<section id="services" class="py-16 sm:py-20">
  <div class="mx-auto max-w-4xl px-6">
    <div class="text-center">
      <p class="text-sm font-semibold uppercase tracking-[0.28em] text-[color:var(--color-primary)]/90">
        What we do
      </p>
      <h2 class="mt-2 text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">{title}</h2>
      <p class="mt-4 text-base text-slate-600">{intro}</p>
    </div>
    <div class="mt-12 space-y-6">
      {items.map(({ title, blurb }) => (
        <article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:border-[color:var(--color-primary)]">
          <h3 class="text-lg font-semibold text-slate-900">{title}</h3>
          <p class="mt-3 text-sm leading-relaxed text-slate-600">{blurb}</p>
        </article>
      ))}
    </div>
  </div>
</section>
