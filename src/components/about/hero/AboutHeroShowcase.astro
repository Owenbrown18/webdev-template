---
import { about } from '../../../config/content';
import ShowcaseHero from '../../shared/hero/ShowcaseHero.astro';

const hero = about.hero ?? {};
const details = [
  hero.location && { label: 'Located in', value: hero.location },
  hero.founded && { label: 'Founded', value: hero.founded },
].filter(Boolean) as Array<{ label: string; value: string }>;

const {
  backgroundClass,
  backgroundTone,
  backgroundStyle,
  animationEnabled = true,
} = Astro.props as {
  backgroundClass?: string;
  backgroundTone?: string;
  animationEnabled?: boolean;
  backgroundStyle?: string;
};

const primaryCta =
  hero.ctaLabel && hero.ctaHref
    ? { label: hero.ctaLabel, href: hero.ctaHref }
    : { label: 'Our journey', href: '#timeline' };
const secondaryCta = { label: 'View services', href: '/services' };
---
<ShowcaseHero
  tagLabel="About Us"
  title={hero.title ?? 'Crafting spaces that feel like home'}
  subtitle={
    hero.subtitle ??
      'From the first walkthrough to the final touch, our team sweats the details so you can enjoy the results.'
  }
  primaryCta={primaryCta}
  secondaryCta={secondaryCta}
  image={hero.image ?? '/images/about-hero.jpg'}
  details={details}
  backgroundClass={backgroundClass}
  backgroundTone={backgroundTone}
  backgroundStyle={backgroundStyle}
  animationEnabled={animationEnabled}
/>
