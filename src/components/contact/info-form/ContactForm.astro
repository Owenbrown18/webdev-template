---
import { getServices } from '../../../config/content';

const {
  class: className = '',
  action = 'https://formspree.io/f/YOUR_FORM_ID',
} = Astro.props;

const items = getServices();
---
<form
  action={action}
  method="POST"
  class={`grid gap-6 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm sm:p-12 ${className}`.trim()}
>
  <div class="grid gap-6 sm:grid-cols-2">
    <label class="flex flex-col gap-2 text-left text-sm font-medium text-slate-700">
      Name
      <input
        type="text"
        name="name"
        required
        placeholder="Your name"
        class="w-full rounded-lg border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-brand-primary focus:outline-none focus:ring focus:ring-brand-primary/20"
      />
    </label>
    <label class="flex flex-col gap-2 text-left text-sm font-medium text-slate-700">
      Email
      <input
        type="email"
        name="email"
        required
        placeholder="you@example.com"
        class="w-full rounded-lg border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-brand-primary focus:outline-none focus:ring focus:ring-brand-primary/20"
      />
    </label>
  </div>
  <div class="grid gap-6 sm:grid-cols-2">
    <label class="flex flex-col gap-2 text-left text-sm font-medium text-slate-700">
      Phone
      <input
        type="tel"
        name="phone"
        placeholder="(555) 123-4567"
        class="w-full rounded-lg border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-brand-primary focus:outline-none focus:ring focus:ring-brand-primary/20"
      />
    </label>
    <label class="flex flex-col gap-2 text-left text-sm font-medium text-slate-700">
      Service of Interest
      <select
        name="service"
        class="w-full rounded-lg border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-brand-primary focus:outline-none focus:ring focus:ring-brand-primary/20"
      >
        <option value="">Select a service</option>
        {items.map(({ title }) => (
          <option value={title}>{title}</option>
        ))}
      </select>
    </label>
  </div>
  <label class="flex flex-col gap-2 text-left text-sm font-medium text-slate-700">
    Message
    <textarea
      name="message"
      rows="5"
      placeholder="Tell us about your project."
      class="w-full rounded-lg border border-slate-200 bg-white px-4 py-3 text-base text-slate-900 shadow-sm focus:border-brand-primary focus:outline-none focus:ring focus:ring-brand-primary/20"
    ></textarea>
  </label>
  <button
    type="submit"
    class="inline-flex w-full justify-center rounded-full bg-brand-primary px-6 py-3 text-base font-semibold text-white shadow-brand-glow transition hover:brightness-110 sm:w-auto"
  >
    Send Message
  </button>
</form>
