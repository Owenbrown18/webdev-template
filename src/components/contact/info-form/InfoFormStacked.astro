---
import type { SiteContent } from '../../../types/content';
import ContactForm from './ContactForm.astro';

interface Props {
  site: SiteContent;
  title?: string;
  intro?: string;
  phoneLabel?: string | null;
  emailLabel?: string | null;
}

const {
  site,
  title = 'How can we help?',
  intro = 'Share a few project details and our team will reply within one business day.',
  phoneLabel,
  emailLabel,
}: Props = Astro.props as Props;

const hours = Array.isArray(site.hours) ? site.hours : [];
const phoneDigits = site.phone ? site.phone.replace(/[^\d+]/g, '') : '';
const phoneHref = phoneDigits ? `tel:${phoneDigits}` : '';
const emailHref = site.email ? `mailto:${site.email}` : '';
---
<section class="space-y-10 py-16 sm:space-y-12 sm:py-20">
  <article class="rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-sm backdrop-blur sm:p-12">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <h1 class="text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">{title}</h1>
        <p class="mt-3 text-base text-slate-600">{intro}</p>
      </div>
      <div class="flex flex-col gap-2 text-sm text-slate-700">
        {site.phone && (
          <a href={phoneHref} class="inline-flex items-center gap-2 font-semibold text-[color:var(--color-primary)] hover:underline">
            {phoneLabel ?? `Call ${site.phone}`}
          </a>
        )}
        {site.email && (
          <a href={emailHref} class="inline-flex items-center gap-2 font-semibold text-[color:var(--color-primary)] hover:underline">
            {emailLabel ?? `Email ${site.email}`}
          </a>
        )}
      </div>
    </div>
    {hours.length > 0 && (
      <div class="mt-8 grid gap-6 rounded-2xl bg-slate-50 p-6 text-sm text-slate-700 sm:grid-cols-[minmax(0,1fr)_minmax(0,1fr)]">
        <div class="space-y-2">
          {hours.map(({ label }) => (
            <div>{label}</div>
          ))}
        </div>
        <div class="space-y-2 text-right font-medium text-slate-900">
          {hours.map(({ open, close }) => (
            <div>{open}{close ? ` â€“ ${close}` : ''}</div>
          ))}
        </div>
      </div>
    )}
  </article>
  <ContactForm />
</section>
